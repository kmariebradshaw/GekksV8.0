@font-face {
  font-family: 'Gilroy';
  src: url('Gilroy-ExtraBold.otf'); 
  font-weight: 900; 
}
@font-face {
  font-family: 'Gilroy';
  src: url('Gilroy-Light.otf'); 
  font-weight: 300; 
}

p, textarea { font-family: 'Gilroy', sans-serif; font-weight: 300; } 
nav,h1,h2,h3,h4,h5,a, span, input, select, label, table, th, td { font-family: 'Gilroy', sans-serif; font-weight: 900; }
body, #main-header,.main .field__input, .section__title, .sidebar .order-summary__emphasis { color: #545359 !important;}

.sidebar .order-summary__small-text {
    color: #717171;
    text-transform: lowercase;
}

.sidebar::after { background-color: #F9F7F7; } 

/* post purchase survey */
.postpurchase {
  width: 80%; 
  height: fit-content; 
  padding: 20px; 
  box-sizing: border-box; 
  background: #fff; 
  margin: 0 auto; 
} 
.close { 
  text-align: right; 
  color: #F9F7F7; 
} 

.postpurchase h2 {
  text-align: center;
  font-weight: bolder;
  padding: 10px;
}

.postpurchase li {
  border: 5px solid #6DCDB8;
  box-shadow: 3px 3px #F9F7F7;
  padding: 10px;
  margin: 10px;
  cursor: pointer;
}

.referral-selected {
  opacity: 0.3;
  cursor: default !important;
  background: #F9F7F7;
  border: 5px solid #F9F7F7 !important;
  box-shadow: none !important;
}

.subscript { font-size: 8pt; margin: 10px 0;}

#gift{
    -webkit-appearance: checkbox;
    margin: 0 5px 5px 5px;
    vertical-align: top;
}
.checkout-upsell {
  width: 100%; 
  box-sizing: border-box;
  margin: 0 auto;
  border-radius: 10px;
  border: 2px solid #6DCDB8;
  padding: 10px;
  #product-wrapper {
    border: 2px solid #F9F7F7;
    border-radius: 10px;
    padding: 5px;
    img { 
      max-width: 33%;
      margin-right: 10px;
     }
  }
}
.two-thirds { width: 66%; }
.flex-container {
  display: flex;
  align-items: center;
  justify-content: center;
}
.button{
    padding: 5px;
    font-weight: 900;
    margin: 10px auto;
    background-color: #6DCDB8;
    color: white;
    width: 80%;
  }
.tac { text-align: center; }
.nm { margin: 0; }

#pitch { margin-bottom: 10px;}
#pitch-variant { font-size: 8pt; }









.loading { background-color:  #F9F7F7; }





