@font-face {
  font-family: 'Gilroy';
  src: url('Gilroy-ExtraBold.otf'); 
  font-weight: 900; 
}
@font-face {
  font-family: 'Gilroy';
  src: url('Gilroy-Light.otf'); 
  font-weight: 300; 
}

p, textarea { font-family: 'Gilroy', sans-serif; font-weight: 300; } 
nav,h1,h2,h3,h4,h5,a, span, input, select, label, table, th, td { font-family: 'Gilroy', sans-serif; font-weight: 900; }
body, #main-header,.main .field__input, .section__title, .sidebar .order-summary__emphasis { color: #545359 !important;}

.sidebar .order-summary__small-text {
    color: #717171;
    text-transform: lowercase;
}

.sidebar::after { background-color: #F9F7F7; } 